{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ts-node",
      "request": "launch",
      "type": "node",
      "runtimeArgs": [
        "-r",
        "${workspaceFolder}/node_modules/tsconfig-paths/register"
      ],
      "args": ["${workspaceFolder}/src/index.ts"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development",
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
      },
      "outFiles": ["${workspaceFolder}/lib/**/*.js"]
    }
  ]
}